{
    "compilerOptions": {
        "target": "es5",
        "lib": [
            "es5",
            "es2015.promise",
            "dom"
        ],
        "noUnusedLocals": true,
        "strictNullChecks": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "buildjs",
        "removeComments": true,
        "declaration": false,
        "sourceMap": false,
        "noImplicitAny": true
    },
    "exclude": [
        "node_modules",
        "test"
    ]
}